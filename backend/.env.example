# Database Configuration (matches Docker command in your message)
# docker run -d --name pg-iot -p 5432:5432 -e POSTGRES_USER=iotuser -e POSTGRES_PASSWORD=secret -e POSTGRES_DB=iotdb postgres:16
DB_HOST=localhost
DB_PORT=5432
DB_NAME=iotdb
DB_USER=iotuser
DB_PASSWORD=secret

# MQTT Configuration - Tương thích với ESP32
MQTT_BROKER=mqtt://broker.emqx.io
MQTT_PORT=1883
MQTT_CLIENT_ID=BackendServer

# Server Configuration
PORT=3000
NODE_ENV=development

# MQTT Topics - Giống với ESP32 firmware
MQTT_TOPIC_LED_SET=home/led/set
MQTT_TOPIC_LED_STATE=home/led/state
MQTT_TOPIC_FAN_SET=home/fan/set
MQTT_TOPIC_FAN_STATE=home/fan/state
